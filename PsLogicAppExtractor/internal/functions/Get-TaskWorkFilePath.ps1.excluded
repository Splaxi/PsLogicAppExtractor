function Get-TaskWorkFilePath {
    [CmdletBinding()]
    param (
        [Parameter(Mandatory = $true)]
        [string] $Path,
        
        [string] $FilePath = $Script:FilePath
    )

    $fileName = [System.IO.Path]::GetFileName($FilePath)

    "$Path\$fileName"
}